<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<param name="Threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p %d{yyyy-MM-dd HH:mm:ss.SSS}] %l [%m]%n" />
		</layout>
	</appender>

	<appender name="erp_file" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="G:/logs/erp-out.log" />
		<param name="DatePattern" value=".yyyyMMdd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
		</layout>
		<param name="Threshold" value="INFO" />
		<param name="MaxFileSize" value="500M" />
		<param name="MaxBackupIndex" value="50" />
	</appender>

	<appender name="erp_error" class="org.apache.log4j.RollingFileAppender">
		<param name="Append" value="true" />
		<param name="Threshold" value="ERROR" />
		<param name="File" value="G:/logs/erp-err.log" />
		<param name="MaxFileSize" value="100MB" />
		<param name="MaxBackupIndex" value="4" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{yyyy-MM-dd HH:mm:ss sss}[%-p][%-c][line:%-L] \r\n  %m%n" />
		</layout>
	</appender>  
    
    <logger name="com.wiselink" additivity="true">
        <level value="INFO" />
        <appender-ref ref="erp_file" />
    </logger>

    <logger name="net.paoding.rose" additivity="true">
        <level value="INFO" />
        <appender-ref ref="erp_file" />
    </logger>

    <logger name="client_ip_logger" additivity="true">
        <level value="WARN" />
        <appender-ref ref="erp_file" />
    </logger>
    
    <logger name="net.paoding.rose.RoseFilter" additivity="true">
        <level value="WARN" />
        <appender-ref ref="erp_file" />
    </logger>

    <root>
        <level value="DEBUG" />
        <appender-ref ref="stdout" />  
        <appender-ref ref="erp_file" />  
        <appender-ref ref="erp_error" />  
    </root>
</log4j:configuration>
